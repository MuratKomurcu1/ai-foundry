# .env.template
# AI Lab Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///ai_lab.db
# For PostgreSQL: postgresql://user:password@localhost:5432/ai_lab
# For MySQL: mysql://user:password@localhost:3306/ai_lab

# =============================================================================
# API KEYS - Replace with your actual keys
# =============================================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face API Key (for model downloads)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google API Key (for translation, search)
GOOGLE_API_KEY=your_google_api_key_here

# Azure OpenAI (if using Azure)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =============================================================================
# EXPERIMENT TRACKING
# =============================================================================

# Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=ai-lab
WANDB_ENTITY=your_wandb_entity

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=ai-lab-experiments

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_TTL=3600

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Model storage paths
MODELS_DIR=./data/models
DATASETS_DIR=./data/datasets
OUTPUTS_DIR=./data/outputs

# Default models
DEFAULT_LLM_MODEL=gpt-3.5-turbo
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_VISION_MODEL=yolov8n

# Model download cache
TRANSFORMERS_CACHE=./models/transformers
TORCH_CACHE=./models/torch

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# FastAPI Server
HOST=0.0.0.0
PORT=8000
DEBUG=true
WORKERS=1

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/ai_lab.log

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ai-lab-storage

# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET_NAME=ai-lab-storage

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_CONTAINER_NAME=ai-lab-storage

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=ai-lab
DOCKER_BUILDKIT=1

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Health check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_GPU=true
ENABLE_WEBCAM=true
ENABLE_AUDIO=false
ENABLE_REAL_TIME=true
ENABLE_BATCH_PROCESSING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEVELOPMENT_MODE=true
AUTO_RELOAD=true
SHOW_DOCS=true
ENABLE_PROFILING=false

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# LANGUAGE SETTINGS
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=["en", "tr", "es", "fr", "de"]

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512
GPU_MEMORY_FRACTION=0.8
CPU_WORKERS=4

# =============================================================================
# SAFETY & CONTENT FILTERING
# =============================================================================
ENABLE_CONTENT_FILTER=true
MAX_INPUT_LENGTH=10000
ALLOWED_FILE_TYPES=["png", "jpg", "jpeg", "pdf", "txt", "csv"]
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
